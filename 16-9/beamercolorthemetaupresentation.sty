\mode<presentation>

% Constants
\definecolor{TAUPURPLE}{RGB}{ 78, 0 142 }
\definecolor{TAUWHITE}{RGB}{ 255, 255, 255 }

% Settings for used Beamer inner theme templates
\setbeamercolor*{title page title}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}

% Colors for Beamer outer theme templates
\setbeamercolor*{frametitle}{fg=TAUPURPLE, bg=TAUWHITE}

% Captions
\setbeamercolor{caption name}{fg=TAUPURPLE}

% Items
\setbeamercolor*{item}{fg=TAUPURPLE}

\mode<all>
