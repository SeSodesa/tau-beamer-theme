% Copyable equations with xparse and accsupp
% Source: https://tex.stackexchange.com/a/119718
\NewDocumentCommand{\copyable}{m}{%
  \BeginAccSupp{%
    ActualText=\detokenize{#1},%
    method=escape,%
  }%
  #1
  \EndAccSupp{}%
}
