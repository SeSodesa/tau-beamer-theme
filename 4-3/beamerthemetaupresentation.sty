\mode<presentation>

% Requirements
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{mathtools}
\RequirePackage{tikz}
\RequirePackage[default]{opensans}
\RequirePackage{booktabs}
\RequirePackage{caption}
\RequirePackage{datetime2}
\DTMsetdatestyle{iso}
\RequirePackage{accsupp}
\RequirePackage{xparse}

% Beamer Settings
\useinnertheme{taupresentation}
\useoutertheme{taupresentation}
\usecolortheme{taupresentation}

\setbeamertemplate{navigation symbols}{}

% Front page information
\title{\mytitle}
\date{\today}
\author{\myauthor}

% Document metadata
\hypersetup {
  pdfauthor={\myauthor},
  pdftitle={\mytitle},
  pdfsubject={\mysubject},
  pdfkeywords={\mykeywords},
  pdfproducer={\myproducer},
  pdfcreator={\mycreator},
}

% Copyable equations with xparse and accsupp
% Source: https://tex.stackexchange.com/a/119718
\NewDocumentCommand{\copyable}{m}{%
  \BeginAccSupp{%
    ActualText=\detokenize{#1},%
    method=escape,%
  }%
  #1
  \EndAccSupp{}%
}
